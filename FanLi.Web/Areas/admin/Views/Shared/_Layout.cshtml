<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>后台管理系统</title>
    <meta name="author" content="DeathGhost" />
    @Styles.Render("~/Content/style")
    <!--[if lt IE 9]>
    <script src="js/html5.js"></script>
    <![endif]-->
    
</head>
<body>
    <!--header-->
    <div class="header">
        <h1><img src="images/admin_logo.png" /></h1>
        <ul class="rt_nav">
            <li>@Html.ActionLink("站点首页", "Index", "Main", new { area = "admin" }, new { @class= "website_icon" })</li>
           <!--<li><a href="#" class="admin_icon">DeathGhost</a></li>-->
            <li>@Html.ActionLink("修改密码", "Index", "Admin", new { area = "admin" }, new { @class = "set_icon" })</li>
            <li>@Html.ActionLink("安全退出", "Logout", "Login", new { area = "admin" }, new { @class = "quit_icon" })</li>
        </ul>
    </div>

    <!--aside nav-->
    <div class="lt_aside_nav content mCustomScrollbar">
        <h2>@Html.ActionLink("起始页", "Index", "Main", new { area = "admin" })</h2>
        <ul class="leftmenu">
            <li>
                <div class="submenuTitle"><a href="/admin/Admin/">管理员<i></i></a></div> 
            </li>
            <li>
                <div class="submenuTitle"><a href="/admin/Users/">会员管理<i></i></a></div>
            </li>
            <li>
                <div class="submenuTitle"><a href="/admin/Product/">产品管理<i></i></a></div> 
            </li>
            <li>
                <div class="submenuTitle"><a href="/admin/Help">帮助中心<i></i></a></div> 
            </li>
            <li>
                <div class="submenuTitle"><a href="/admin/Logistical/">物流管理<i></i></a></div> 
            </li>
            <li>
                <div class="submenuTitle"><a href="/admin/Malls/">商城管理<i></i></a></div> 
            </li>
            <li>
                <div class="submenuTitle"><a href="/admin/News/">新闻管理<i></i></a></div> 
            </li>
            <li>
                <div class="submenuTitle"><a href="/admin/Video/">视频管理<i></i></a></div> 
            </li>
            <li>
                <div class="submenuTitle"><a href="/admin/AdList/">广告管理<i></i></a></div>
            </li>
        </ul>
    </div>

    <div class="rt_wrap content mCustomScrollbar">
        <div class="rt_content">
           
               @RenderBody()
                     
        </div>
    </div>
   @Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/mCustomScrollbar")
<script> 
        (function ($) {

            $(window).load(function () {

                $("a[rel='load-content']").click(function (e) {
                    e.preventDefault();
                    var url = $(this).attr("href");
                    $.get(url, function (data) {
                        $(".content .mCSB_container").append(data);
                        $(".content").mCustomScrollbar("scrollTo", "h2:last");
                    });
                });

                $(".content").delegate("a[href='top']", "click", function (e) {
                    e.preventDefault();
                    $(".content").mCustomScrollbar("scrollTo", $(this).attr("href"));
                });

            });
        })(jQuery);
</script>
    @RenderSection("scripts", required: false)
</body>
</html>
