@model FanLi.Web.Areas.admin.Models.UsersListViewModel
@using Webdiyer.WebControls.Mvc;
@{
    ViewBag.Title = "listRole";
}
<section>
    <div class="rightTab">
        <ul>
            <li class="current"><a href="/admin/Users">会员列表</a></li>
            <li><a href="/admin/Favorite">收藏列表</a></li>
        </ul>
    </div>
        <div class="page_title">
            <h2 class="fl"></h2> 
        </div>
        <table class="table">
            <tr>
                <th>用户名</th>
                <th>电话</th>
                <th>邮箱</th>
                <th>真实姓名</th>
                <th>QQ</th>
                <th>类型</th>
                <th>状态</th>
                <th>操作</th>
            </tr>
            @foreach (var info in Model.Infos)
            {
                <tr>
                    <td>@if (!string.IsNullOrEmpty(info.HeadPhoto))
                    {<img src="info.HeadPhoto" style="max-height:28px;" />}@Html.DisplayFor(model => info.UserName)
                    </td>
                    <td>@Html.DisplayFor(model => info.Tel)</td>
                    <td>@Html.DisplayFor(model => info.Email)</td>
                    <td>@Html.DisplayFor(model => info.TrueName)</td>
                    <td>@Html.DisplayFor(model => info.QQ)</td>
                    <td>@info.Type</td>
                    <td>@info.Status</td>
                    <td><a href="">查看详情</a></td>
                </tr>
            }
        </table>
    <aside class="paging">
        @Html.Pager(Model.Infos, new PagerOptions
   {
       PageIndexParameterName = "page",
       FirstPageText = "首页",
       PrevPageText = "上一页",
       NextPageText = "下一页",
       LastPageText = "末页",
       ContainerTagName = "span",
       AutoHide = true,
       MaximumPageIndexItems = 6,
       ShowNumericPagerItems = true,
   })
        @Html.Raw("共：") @Model.Infos.TotalItemCount @Html.Raw("条，")
        @Model.Infos.CurrentPageIndex @Html.Raw("/") @Model.Infos.TotalPageCount @Html.Raw("页")
    </aside>

</section>