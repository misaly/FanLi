@model FanLi.Web.Areas.admin.Models.VideoCommentListViewModel
@using Webdiyer.WebControls.Mvc;
@{
    ViewBag.Title = "listRole";
}
<section>
    <div class="rightTab">
        <ul>
            <li class="current"><a href="/admin/Video/">视频列表</a></li>
            <li><a href="/admin/Video/add">添加视频</a></li>
        </ul>
    </div>
    <div class="page_title">
        <h2 class="fl"></h2>
        <a class="fr top_rt_btn" href="javascript:history.go(-1);">返回</a>
    </div>
    <table class="table">
        <tr>
            <th>视频标题</th>
            <th>评论内容</th>
            <th>评论人</th>
            <th>创建时间</th>

        </tr>
        @foreach (var info in Model.Infos)
            {
            <tr>
                <td>@Html.DisplayFor(model => info.Video.Title)</td>
                <td>@Html.DisplayFor(model => info.Comment)</td>
                <td>@Html.DisplayFor(model => info.Users.UserName)</td>
                <td>@Html.DisplayFor(model => info.CreateTime)</td>

            </tr>
        }
    </table>
    <aside class="paging">
        @Html.Pager(Model.Infos, new PagerOptions
       {
           PageIndexParameterName = "page",
           FirstPageText = "首页",
           PrevPageText = "上一页",
           NextPageText = "下一页",
           LastPageText = "末页",
           ContainerTagName = "span",
           AutoHide = true,
           MaximumPageIndexItems = 6,
           ShowNumericPagerItems = true,
       })
        @Html.Raw("共：") @Model.Infos.TotalItemCount @Html.Raw("条，")
        @Model.Infos.CurrentPageIndex @Html.Raw("/") @Model.Infos.TotalPageCount @Html.Raw("页")
    </aside>

</section>