
@model FanLi.Web.Areas.admin.Models.FavoriteListViewMode
@using Webdiyer.WebControls.Mvc;
@{
    ViewBag.Title = "listRole";
}

<section>
    <div class="rightTab">
        <ul>
            <li><a href="/admin/Users">会员列表</a></li>
            <li class="current"><a href="/admin/Favorite">收藏列表</a></li>
        </ul>
    </div>
    <div class="page_title">
        <h2 class="fl"></h2> 
    </div>
    <table class="table">
        <tr>
            <th>用户</th>
            <th>产品</th>
            <th>创建时间</th>
             
        </tr>
        @foreach (var info in Model.Infos)
        {
            <tr>
                <td>@Html.DisplayFor(model => info.Users.UserName)</td>
                <td>@Html.DisplayFor(model => info.Products.proName)</td>
                <td>@info.CreateTime</td>
                
            </tr>
        }
    </table>
    <aside class="paging">
        @Html.Pager(Model.Infos, new PagerOptions
   {
       PageIndexParameterName = "page",
       FirstPageText = "首页",
       PrevPageText = "上一页",
       NextPageText = "下一页",
       LastPageText = "末页",
       ContainerTagName = "span",
       AutoHide = true,
       MaximumPageIndexItems = 6,
       ShowNumericPagerItems = true,
   })
        @Html.Raw("共：") @Model.Infos.TotalItemCount @Html.Raw("条，")
        @Model.Infos.CurrentPageIndex @Html.Raw("/") @Model.Infos.TotalPageCount @Html.Raw("页")
    </aside>



</section>

