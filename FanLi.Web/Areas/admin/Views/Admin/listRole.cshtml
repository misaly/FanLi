@model FanLi.Web.Areas.admin.Models.AdminRoleListViewMode
@using Webdiyer.WebControls.Mvc;
@{
    ViewBag.Title = "listRole";
}

<section>
    <div class="rightTab">
        <ul>
            <li><a href="/admin/Admin/">管理员列表</a></li>
            <li><a href="/admin/Admin/add">添加管理员</a></li>
            <li><a href="/admin/Admin/EditPwd">修改密码</a></li>
            <li><a href="/admin/Admin/addRole">添加角色</a></li>
            <li class="current"><a href="/admin/Admin/listRole">角色列表</a></li>
        </ul>
    </div>
    <div class="page_title">
        <h2 class="fl"></h2>
        @Html.ActionLink("添加", "addRole", "Admin", new { @class = "fr top_rt_btn" })
    </div>
    <table class="table">
        <tr>
            <th>角色名称</th>
            <th>描述</th>
            <th>操作</th>
        </tr>
        @foreach (var info in Model.Infos)
        {
            <tr>
                <td>@Html.DisplayFor(model => info.RoleName)</td>
                <td>@Html.DisplayFor(model => info.Description)</td>
                <td><a href="/admin/Admin/editRole?@info.Id">修改</a></td>
            </tr>
        }
    </table>
    <aside class="paging">
        @Html.Pager(Model.Infos, new PagerOptions
   {
       PageIndexParameterName = "page",
       FirstPageText = "首页",
       PrevPageText = "上一页",
       NextPageText = "下一页",
       LastPageText = "末页",
       ContainerTagName = "span",
       AutoHide = true,
       MaximumPageIndexItems = 6,
       ShowNumericPagerItems = true,
   })
        @Html.Raw("共：") @Model.Infos.TotalItemCount @Html.Raw("条，")
        @Model.Infos.CurrentPageIndex @Html.Raw("/") @Model.Infos.TotalPageCount @Html.Raw("页")
    </aside>

   
</section>

