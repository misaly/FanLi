@model FanLi.Web.Areas.admin.Models.HelpListViewModel
@using Webdiyer.WebControls.Mvc;
@{
    ViewBag.Title = "list";
}

<section>
    <div class="rightTab">
        <ul>
            <li class="current"><a href="/admin/Help/">帮助文档列表</a></li>
            <li><a href="/admin/Help/add">添加帮助文档</a></li> 
            <li><a href="/admin/Help/addType">添加帮助分类</a></li>
            <li><a href="/admin/Help/listType">分类列表</a></li>
        </ul>
    </div> 
    <div class="page_title"></div>
    <table class="table">
        <tr>
            <th>标题</th>
            <th>类型</th>
            <th>创建时间</th>
            <th>操作</th>
        </tr>
        @foreach (var info in Model.Infos)
        {
            <tr>
                <td>@Html.DisplayFor(model => info.Title)</td>
                <td>@Html.DisplayFor(model => info.HelpType.TName)</td>
                
                <td>@info.CreateTime</td>
                <td><a href="">修改</a></td>
            </tr>
        }
    </table>
    <aside class="paging">
        @Html.Pager(Model.Infos, new PagerOptions
   {
       PageIndexParameterName = "page",
       FirstPageText = "首页",
       PrevPageText = "上一页",
       NextPageText = "下一页",
       LastPageText = "末页",
       ContainerTagName = "span",
       AutoHide = true,
       MaximumPageIndexItems = 6,
       ShowNumericPagerItems = true,
   })
        @Html.Raw("共：") @Model.Infos.TotalItemCount @Html.Raw("条，")
        @Model.Infos.CurrentPageIndex @Html.Raw("/") @Model.Infos.TotalPageCount @Html.Raw("页")
    </aside> 
</section>

