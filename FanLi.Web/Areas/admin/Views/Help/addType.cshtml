@model FanLi.Web.Areas.admin.Models.HelpTypeAddViewModel
@using FanLi.Models
@{
    ViewBag.Title = "addType";
}

<section>

    <div class="rightTab">
        <ul>
            <li><a href="/admin/Help/">帮助文档列表</a></li>
            <li><a href="/admin/Help/add">添加帮助文档</a></li>
            <li class="current"><a href="/admin/Help/addType">添加帮助分类</a></li>
            <li><a href="/admin/Help/listType">分类列表</a></li>
        </ul>
    </div> 
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <ul class="ulColumn2">
                <li>
                    @Html.LabelFor(model => model.TName, new { @class = "item_name" })：

                    @Html.TextBoxFor(model => model.TName, new { @class = "textbox textbox_225" })
                    @Html.ValidationMessageFor(model => model.TName, "", new { @class = "errorTips" })

                </li> 
                <li>
                    @Html.LabelFor(model => model.ParentId, new { @class = "item_name" })：
                   
                    <select id="ParentId">
                        <option value="0">请选择</option>
                        @{ List<HelpType> listtypeone = (List<HelpType>)ViewData["htypeone"]; }
                        @if (listtypeone != null && listtypeone.Count > 0)
                        {
                            foreach (HelpType item in listtypeone)
                            {
                                <option value="@item.Id">@item.TName</option>
                            }
                        }
                    </select> 
                      
                </li>
                <li>
                    @Html.LabelFor(model => model.Sort, new { @class = "item_name" })：
                    @Html.TextBoxFor(model => model.Sort, new { @class = "textbox textbox_225" })
                    @Html.ValidationMessageFor(model => model.Sort, "", new { @class = "errorTips" })
                </li> 

                <li>
                    <span class="item_name" style="width: 120px;"></span>
                    <input type="submit" value="提交" class="btn btn-default" />
                </li>
            </ul>
                            }
    </div>
    @section scripts{
        <script>

            $(document).ready(function () {
                

            });
           
        </script>
    }
</section> 